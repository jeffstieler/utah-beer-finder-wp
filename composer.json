{
	"name": "jeffstieler/brewtah",
	"description": "Find the best beer available in Utah",
	"authors": [
		{
			"name": "Jeff Stieler",
			"email": "jeff.m.stieler@gmail.com"
		}
	],
	"type": "project",
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "wordpress/wordpress",
				"type": "webroot",
				"version": "4.9.2",
				"source": {
					"type": "git",
					"url": "https://github.com/WordPress/WordPress.git",
					"reference": "4.9.2"
				},
				"require": {
					"fancyguy/webroot-installer": "1.1.0"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "upstatement/jigsaw",
				"type": "wordpress-plugin",
				"version": "0.4.11",
				"source": {
					"url": "https://github.com/Upstatement/jigsaw.git",
					"type": "git",
					"reference": "5c3d9c4fbb095246500c63c2aa9c4cb09bbb8688"
				},
				"require" : {
					"composer/installers": "~1.0"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "jeffstieler/beautiful-taxonomy-filters",
				"type": "wordpress-plugin",
				"version": "1.1.2",
				"source": {
					"url": "https://github.com/jeffstieler/beautiful-taxonomy-filters.git",
					"type": "git",
					"reference": "80ac8b8da014faa6192b5ab8932030079767e20b"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "voceconnect/objects-to-objects",
				"type": "wordpress-plugin",
				"version": "1.2.4",
				"source": {
					"url": "https://github.com/voceconnect/objects-to-objects.git",
					"type": "git",
					"reference": "1.2.4"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "voceconnect/post-selection-ui",
				"type": "wordpress-plugin",
				"version": "1.0.13",
				"source": {
					"url": "https://github.com/voceconnect/post-selection-ui.git",
					"type": "git",
					"reference": "1.0.13"
				}
			}
		},
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"config": {
		"preferred-install": "dist"
	},
	"scripts": {
		"post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
		],
		"test": [
      "phpcs"
		]
  },
	"require": {
		"php": ">=5.6",
		"composer/installers": "^1.4",
		"wordpress/wordpress": "4.9.2",
		"symfony/css-selector": "~2.6",
		"symfony/dom-crawler": "~2.5",
		"wpackagist-plugin/titan-framework": "~1.5",
		"upstatement/jigsaw": "~0.4",
		"voceconnect/objects-to-objects": "~1.2",
		"voceconnect/post-selection-ui": "1.0.13",
		"wpackagist-plugin/posts-to-posts": "~1.6",
		"jeffstieler/beautiful-taxonomy-filters": "~1.1",
		"wpackagist-plugin/wp-crontrol": "~1.2",
		"vlucas/phpdotenv": "^2.0.1",
		"wpackagist-plugin/memcached-redux": "~0.1.3",
		"oscarotero/env": "^1.1.0",
		"roots/wp-password-bcrypt": "1.0.0"
	},
	"require-dev" : {
		"squizlabs/php_codesniffer": "^3.0.2"
	},
	"extra": {
		"installer-paths": {
			"web/app/themes/utah-beer-finder/plugins/{$name}/": [
				"wpackagist-plugin/titan-framework",
				"upstatement/jigsaw",
				"voceconnect/objects-to-objects",
				"voceconnect/post-selection-ui"
			],
			"web/app/drop-ins/{$name}/": [
				"wpackagist-plugin/memcached-redux"
			],
			"web/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			],
			"web/app/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"web/app/themes/{$name}/": [
				"type:wordpress-theme"
			]
		},
		"webroot-dir": "web/wp",
		"webroot-package": "wordpress/wordpress"
    }
}