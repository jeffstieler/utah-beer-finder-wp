{
	"name": "jeffstieler/brewtah",
	"description": "Find the best beer available in Utah",
	"authors": [
		{
			"name": "Jeff Stieler",
			"email": "jeff.m.stieler@gmail.com"
		}
	],
	"type": "project",
	"minimum-stability": "dev",
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "wordpress",
				"type": "webroot",
				"version": "4.1",
				"dist": {
					"type": "zip",
					"url": "http://wordpress.org/wordpress-4.1.zip"
				},
				"require" : {
					"fancyguy/webroot-installer": "1.0.0"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "upstatement/jigsaw",
				"type": "wordpress-plugin",
				"version": "0.4.11",
				"source": {
					"url": "https://github.com/Upstatement/jigsaw.git",
					"type": "git",
					"reference": "5c3d9c4fbb095246500c63c2aa9c4cb09bbb8688"
				},
				"require" : {
					"composer/installers": "~1.0"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "jeffstieler/beautiful-taxonomy-filters",
				"type": "wordpress-plugin",
				"version": "1.1.2",
				"source": {
					"url": "https://github.com/jeffstieler/beautiful-taxonomy-filters.git",
					"type": "git",
					"reference": "80ac8b8da014faa6192b5ab8932030079767e20b"
				}
			}
		},
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		}
	],
	"config": {
		"vendor-dir": "web/app/themes/utah-beer-finder/vendor",
		"preferred-install": "dist",
		"generate-salts": true
	},
	"autoload": {
		"psr-0": {
			"Roots\\Bedrock\\Installer": "scripts"
		}
	},
	"scripts": {
		"post-root-package-install": [
			"Roots\\Bedrock\\Installer::addSalts"
		]
	},
	"require": {
		"wordpress": "4.1",
		"symfony/css-selector": "~2.6",
		"symfony/dom-crawler": "~2.5",
		"wpackagist-plugin/titan-framework": "~1.5",
		"upstatement/jigsaw": "~0.4",
		"voceconnect/objects-to-objects": "~1.2",
		"jeffstieler/beautiful-taxonomy-filters": "~1.1",
		"wpackagist-plugin/wp-crontrol": "~1.2",
		"vlucas/phpdotenv": "1.0.9"
	},
	"require-dev" : {
		"wpackagist-plugin/developer" : "~1.2"
	},
	"extra": {
		"installer-paths": {
			"web/app/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			],
			"web/app/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"web/app/themes/{$name}/": [
				"type:wordpress-theme"
			],
			"web/app/themes/utah-beer-finder/plugins/{$name}/": [
				"wpackagist-plugin/titan-framework",
				"upstatement/jigsaw"
			]
		},
		"webroot-dir": "web/wp",
		"webroot-package": "wordpress"
    }
}